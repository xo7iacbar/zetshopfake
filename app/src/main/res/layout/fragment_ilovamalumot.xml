<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IlovamalumotFragment">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="ZedShop"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/txt2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:text="Ilova versiyasi (Version 1.0.0)"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/txt3"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:text="Ilova Xaqida Malumot! "
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt4"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="ZedShop — bu foydalanuvchilarga har xil tovarlarni qulay, tez va xavfsiz tarzda xarid qilish imkonini beruvchi zamonaviy onlayn savdo maydonchasidir. Platforma orqali siz uyda yoki ishda o‘tirgan holatda turli mahsulotlarni buyurtma qilib, ularni eshigingizgacha yetkazib berilishiga erishasiz."
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt5"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="Keng toifalar: oziq-ovqat, kiyim-kechak, texnika, go‘zallik mahsulotlari, bolalar uchun tovarlar va boshqalar.
Foydalanuvchi mahsulotlarni izlaydi, filtrlab saralaydi, narx va sifatini solishtiradi."
        app:layout_constraintTop_toBottomOf="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt6"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="Mahsulotni “Savat”ga qo‘shib, kerakli manzil va to‘lov usulini tanlaydi.Onlayn to‘lov (karta orqali) yoki naqd to‘lov (qabul qilganda) imkoniyati mavjud."
        app:layout_constraintTop_toBottomOf="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt7"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="ZedShop o‘zining yetkazib berish xizmati orqali mahsulotni odatda 1 kun ichida yetkazib beradi (ba’zi hollarda 24–72 soat)."
        app:layout_constraintTop_toBottomOf="@+id/txt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:id="@+id/txt8"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:text="📞 Biz bilan bog‘lanish"
        app:layout_constraintTop_toBottomOf="@+id/txt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/txt9"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Telefon raqami:📱 +998 71 200 00 00"
        app:layout_constraintTop_toBottomOf="@+id/txt8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt10"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Telegram: @ZedShop_support"
        app:layout_constraintTop_toBottomOf="@+id/txt9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt11"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Elektron pochta: support@zedshop.uz"
        app:layout_constraintTop_toBottomOf="@+id/txt10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt12"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Manzil:📍 Toshkent shahri, Chilonzor tumani, Muqimiy ko‘chasi, 12-uy"
        app:layout_constraintTop_toBottomOf="@+id/txt11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<androidx.appcompat.widget.AppCompatButton
    android:textSize="20dp"
    android:text="Bosh Saxifa"
    android:background="@drawable/bosh_saxifa_btn"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="60dp"
/>



</androidx.constraintlayout.widget.ConstraintLayout>